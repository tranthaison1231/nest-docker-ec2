generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          String   @id @default(cuid())
  avatarURL   String?
  createdAt   DateTime @default(now())
  email       String   @unique
  firstName   String?
  lastName    String?
  password    String
  phoneNumber String?
  salt        String
  updatedAt   DateTime @updatedAt
}
